{
  "audio": {
    "buffer_size": 32768,
    "channels": 2,
    "display_samples": 2000,
    "sample_rate": 44100,
    "fft_skip_frames": 0,
    "silence_threshold": -100.0,
    "engine": "pipewire"
  },
  "debug": {
    "log_fps": false
  },
  "fft": {
    "fft_fall_speed": 50.0,
    "fft_hover_fall_speed": 10.0,
    "fft_max_db": 10.0,
    "fft_max_freq": 20000.0,
    "fft_min_db": -60.0,
    "fft_min_freq": 10.0,
    "fft_rise_speed": 500.0,
    "fft_size": 4096,
    "fft_slope_correction_db": 4.5,
    "fft_smoothing_factor": 0.2,
    "note_key_mode": "sharp",
    "stereo_mode": "midside"
  },
  "font": {
    "default_font": "/path/to/freetype-font.ttf"
  },
  "lissajous": {
    "enable_phosphor": true,
    "enable_splines": true,
    "phosphor_spline_density": 8,
    "phosphor_tension": 0.5,
    "max_points": 2048,
    "spline_segments": 8,
    "phosphor_beam_energy": 1.0,
    "phosphor_db_lower_bound": -80.0,
    "phosphor_db_mid_point": -50.0,
    "phosphor_db_upper_bound": -40.0,
    "phosphor_decay_constant": 50.0,
    "phosphor_beam_size": 2.0,
    "phosphor_line_blur_spread": 0.4,
    "phosphor_line_width": 1.0,
    "phosphor_beam_speed_multiplier": 1.0
  },
  "oscilloscope": {
    "amplitude_scale": 0.5,
    "enable_phosphor": true,
    "gradient_mode": "horizontal",
    "follow_pitch": true,
    "phosphor_beam_energy": 1.0,
    "phosphor_db_lower_bound": -90.0,
    "phosphor_db_mid_point": -50.0,
    "phosphor_db_upper_bound": -40.0,
    "phosphor_decay_constant": 50.0,
    "phosphor_beam_size": 2.0,
    "phosphor_line_blur_spread": 0.5,
    "phosphor_line_width": 1.0,
    "phosphor_beam_speed_multiplier": 1.0
  },
  "pulseaudio": {
    "default_source": "whatever.monitor",
    "buffer_size": 256
  },
  "pipewire": {
    "default_source": "whatever",
    "buffer_size": 256,
    "ring_multiplier": 4
  },
  "spectrogram": {
    "frequency_scale": "log",
    "interpolation": true,
    "max_db": -10.0,
    "max_freq": 20000.0,
    "min_db": -80.0,
    "min_freq": 20.0,
    "time_window": 2.0
  },
  "visualizers": {
    "fft_order": 2,
    "fft_popout": false,
    "lissajous_order": 0,
    "lissajous_popout": false,
    "oscilloscope_order": 1,
    "oscilloscope_popout": false,
    "spectrogram_order": -1,
    "spectrogram_popout": false
  },
  "window": {
    "default_height": 200,
    "default_theme": "mocha.txt",
    "default_width": 1080
  }
}
